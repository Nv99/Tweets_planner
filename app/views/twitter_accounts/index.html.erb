<div class="d-flex align-items-center justify-content-between">
<h1>Twitter Accounts </h1>
<%= link_to "Connect a Twitter account", "/auth/twitter",data: {turbo: "false"},method: :post, class: "btn btn-primary" %>
</div>
<% @twitter_accounts.each do |twitter_account| %>
    <div class="d-flex align-items-center mb-4">
    <div class="me-4">
        <% image_url = twitter_account.image %>
        <%= image_tag image_url, class: "rounded-circle" %>
        <%= link_to "@#{twitter_account.name}", "https://twitter.com/#{twitter_account.username}", target: :_blank %> 
    </div>

    <%= button_to "Disconnect", twitter_account, method: :delete, class: "btn btn-outline-danger", form: {data: {turbo_confirm: "Are you sure?" }} %>    

    </div>
<% end %>